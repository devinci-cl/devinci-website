<Layout title="Contacto | Devinci">
    <section class="py-20 bg-slate-900">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-16">
                <div>
                    <h1 class="text-4xl font-bold text-white mb-6">
